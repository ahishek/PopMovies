<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.solo.nair.popmovies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieListActivity"
            android:label="@string/title_activity_movie_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.solo.nair.popmovies.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.MovieInfoActivity"
            android:label="@string/title_activity_movie_info"
            android:parentActivityName=".MovieListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.solo.nair.popmovies.MovieListActivity"/>
        </activity>
    </application>

</manifest>